@model List<GetAllStudentQueryResult>
@{
    Layout = null;
    int count = 0;
}
<a href="~/lib/bootstrap/dist/css/bootstrap.css.map"></a>
<a href="~/lib/bootstrap/dist/css/bootstrap.min.css.map"></a>
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">
    <table class="table table-striped">
        <tr>
            <th>#</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Şehir</th>
            <th>Bölüm</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.City</td>
                <td>@item.Department</td>
                <td><a href="/Student/DeleteStudent/@item.StudentID" class="btn btn-dark">SİL</a></td>
                <td><a href="/Student/UpdateStudent/@item.StudentID" class="btn btn-success">GÜNCELLE</a></td>
                <td><a href="/Student/DetailStudent/@item.StudentID" class="btn btn-warning">DETAYLAR</a></td>
            </tr>
        }
    </table>
    <br />
    <a href="/Student/AddStudent" class="btn btn-primary">YENİ ÖĞRENCİ EKLE</a>
</div>